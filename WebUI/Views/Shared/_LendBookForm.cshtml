@model LendBookViewModel

<div class="border-0 p-3">
    <div class="row">
        <div class="form-floating py-2 col-12 mb-3">
            <input asp-for="Name" class="form-control shadow rounded" readonly />
            <label asp-for="Name" class="ms-2"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-floating py-2 col-12 mb-3">
            <input asp-for="BorrowerLibraryId" class="form-control shadow rounded" />
            <label asp-for="BorrowerLibraryId" class="ms-2"></label>
            <span asp-validation-for="BorrowerLibraryId" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-floating py-2 col-12 mb-3">
            <input asp-for="ReturnDate" type="date" class="form-control shadow rounded" value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
            <label asp-for="ReturnDate" class="ms-2"></label>
            <span asp-validation-for="ReturnDate" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-6">
            <button type="submit" class="form-control btn btn-success rounded shadow">Lend</button>
        </div>
        <div class="col-6">
            <a asp-controller="Book" asp-action="Index" class="form-control btn btn-outline-secondary shadow">Back To List</a>
        </div>
    </div>
</div>

